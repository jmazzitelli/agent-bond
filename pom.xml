<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <packaging>pom</packaging>

  <parent>
    <groupId>org.sonatype.oss</groupId>
    <artifactId>oss-parent</artifactId>
    <version>9</version>
  </parent>

  <groupId>io.fabric8</groupId>
  <artifactId>agent-bond</artifactId>
  <version>1.0.3-SNAPSHOT</version>

  <url>http://github.com/fabric8io/agent-bond</url>

  <properties>
    <version.jolokia>1.3.6</version.jolokia>
    <version.jmx_exporter>0.10</version.jmx_exporter>
    <version.hawkular>1.0.0.CR7</version.hawkular>
  </properties>

  <modules>
    <module>agent</module>
    <module>core</module>
    <module>jolokia</module>
    <module>jmx_exporter</module>
    <module>hawkular</module>
  </modules>

  <build>
    <plugins>

      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>3.1</version>
        <configuration>
          <source>1.7</source>
          <target>1.7</target>
        </configuration>
      </plugin>

      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-gpg-plugin</artifactId>
        <version>1.5</version>
        <configuration>
          <passphrase>${gpg.passphrase}</passphrase>
          <useAgent>true</useAgent>
        </configuration>
      </plugin>
    </plugins>

    <pluginManagement>
      <plugins>
        <plugin>
          <groupId>org.apache.maven.plugins</groupId>
          <artifactId>maven-shade-plugin</artifactId>
          <version>2.4</version>
        </plugin>
      </plugins>
    </pluginManagement>
  </build>

  <!-- ============================================================================================= -->


  <dependencies>
    <!-- Test -->
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <version>4.11</version>
      <scope>test</scope>
    </dependency>
  </dependencies>

  <issueManagement>
    <system>GitHub</system>
    <url>https://github.com/fabric8io/agent-bond/issues/</url>
  </issueManagement>

  <scm>
    <connection>scm:git:git://github.com/fabric8io/agent-bond.git</connection>
    <developerConnection>scm:git:ssh://git@github.com/fabric8io/agent-bond.git</developerConnection>
    <tag>HEAD</tag>
    <url>git://github.com/fabric8io/agent-bond.git</url>
  </scm>

  <distributionManagement>
    <snapshotRepository>
      <id>sonatype-nexus-snapshots</id>
      <name>Sonatype Nexus Snapshots</name>
      <url>https://oss.sonatype.org/content/repositories/snapshots/</url>
    </snapshotRepository>
    <repository>
      <id>sonatype-nexus-staging</id>
      <name>Nexus Release Repository</name>
      <url>
        https://oss.sonatype.org/service/local/staging/deploy/maven2/
      </url>
    </repository>
  </distributionManagement>
</project>
