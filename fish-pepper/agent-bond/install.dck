{{
  var destPath = fp.blockOpts.dest || "/bin/agent-bond-options";
  var agentBondVersion = fp.version.agentBond || fp.blockOpts.version || "1.0.2";
}}# Agent bond including Jolokia and jmx_exporter
ADD agent-bond-opts {{= destPath }}
RUN mkdir -p /opt/agent-bond \
 && curl http://central.maven.org/maven2/io/fabric8/agent-bond-agent/{{= agentBondVersion }}/agent-bond-agent-{{= agentBondVersion }}.jar \
          -o /opt/agent-bond/agent-bond.jar \
 && chmod 444 /opt/agent-bond/agent-bond.jar \
 && chmod 755 {{= destPath}}
ADD jmx_exporter_config.yml /opt/agent-bond/
ADD hawkular_javaagent_config.yml /opt/agent-bond/
EXPOSE 8778 9779
